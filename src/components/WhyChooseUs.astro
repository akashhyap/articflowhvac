---
import { Image } from 'astro:assets';
import whyImage from '../assets/hvac_contractor.jpg';

export interface Props {
  heading?: string;
}

const { heading = 'Why Choose ArcticFlow HVAC?' } = Astro.props;

const reasons = [
  {
    title: '24/7 Emergency Service',
    description: 'Always available for prompt, reliable HVAC assistance — even in the Las Vegas heat at 2 AM.',
  },
  {
    title: 'Licensed & Insured',
    description: 'Certified, licensed, and fully insured technicians with factory training on all major brands.',
  },
  {
    title: 'Customer Satisfaction',
    description: 'Dedicated to keeping every customer happy and comfortable, backed by our workmanship guarantee.',
  },
  {
    title: 'Competitive Pricing',
    description: 'Fair, upfront pricing with free estimates. No hidden fees, no surprise charges — ever.',
  },
  {
    title: 'Fast Response Times',
    description: 'Quick dispatch and same-day service throughout the entire Las Vegas Valley.',
  },
  {
    title: 'Locally Owned & Operated',
    description: 'Proudly serving our Las Vegas community with the care and attention your neighbors deserve.',
  },
];
---

<section class="section-padding bg-white overflow-hidden">
  <div class="container-wide">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

      <!-- Image Side -->
      <div class="relative">
        <div class="rounded-2xl overflow-hidden shadow-2xl">
          <Image
            src={whyImage}
            alt="ArcticFlow HVAC professional technician at work"
            class="w-full h-auto object-cover aspect-[4/5] lg:aspect-[3/4]"
            widths={[480, 768, 1024]}
            sizes="(max-width: 1024px) 100vw, 50vw"
            quality={80}
          />
        </div>
        <!-- Floating stat card -->
        <div class="absolute -bottom-6 -right-4 sm:right-4 bg-primary text-white rounded-xl shadow-xl p-5 max-w-[200px]">
          <span class="text-accent text-[2.5rem] font-heading font-extrabold leading-none block">24/7</span>
          <span class="text-white/80 text-[0.9375rem] mt-1 block">Emergency Service Across Las Vegas</span>
        </div>
      </div>

      <!-- Content Side -->
      <div>
        <span class="text-secondary font-heading font-bold text-[0.9375rem] tracking-wide uppercase mb-3 block">Why Homeowners Trust Us</span>
        <h2 class="text-h2 text-primary mb-10">{heading}</h2>

        <div class="space-y-6">
          {reasons.map((item, i) => (
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-accent/10 border border-accent/20 flex items-center justify-center mt-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5 text-accent">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
              </div>
              <div>
                <h3 class="text-[1.15rem] font-heading font-bold text-primary mb-1">{item.title}</h3>
                <p class="text-neutral-500 text-[1rem] leading-relaxed">{item.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

    </div>
  </div>
</section>
