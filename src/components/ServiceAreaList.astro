---
import { serviceAreas } from '../data/site';

export interface Props {
  heading?: string;
  compact?: boolean;
}

const { heading = 'Communities We Serve', compact = false } = Astro.props;
---

<section class={`section-padding ${compact ? 'bg-white' : 'bg-primary-50'}`}>
  <div class="container-wide">
    <h2 class="text-h2 text-primary text-center mb-4">{heading}</h2>
    <p class="text-neutral-500 text-body-lg text-center max-w-2xl mx-auto mb-10">
      Professional HVAC services throughout the Las Vegas Valley
    </p>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
      {serviceAreas.map((area) => (
        <a
          href={`/service-areas/${area.slug}/`}
          class="group bg-white rounded-lg shadow-sm border border-neutral-100 p-4 text-center hover:shadow-md hover:border-secondary-200 transition-all duration-200"
        >
          <span class="text-2xl mb-1 block">üìç</span>
          <span class="text-body font-semibold text-primary group-hover:text-secondary transition-colors">{area.name}</span>
        </a>
      ))}
    </div>
    {!compact && (
      <div class="text-center mt-8">
        <a href="/service-areas/" class="btn-secondary">View All Service Areas</a>
      </div>
    )}
  </div>
</section>
