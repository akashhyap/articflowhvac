---
export interface BreadcrumbItem {
  label: string;
  href?: string;
}

export interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

const schemaItems = items.map((item, i) => ({
  '@type': 'ListItem',
  position: i + 1,
  name: item.label,
  ...(item.href ? { item: `https://arcticflowhvaclasvegas.com${item.href}` } : {}),
}));

const schema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: schemaItems,
};
---

<nav aria-label="Breadcrumb" class="bg-neutral-100 border-b border-neutral-200">
  <div class="container-wide py-3.5 px-4 sm:px-6 lg:px-8">
    <ol class="flex flex-wrap items-center gap-1.5 text-[0.9375rem]">
      {items.map((item, i) => (
        <li class="flex items-center gap-1.5">
          {i > 0 && <span class="text-neutral-400">/</span>}
          {item.href ? (
            <a href={item.href} class="text-secondary hover:text-primary transition-colors">{item.label}</a>
          ) : (
            <span class="text-neutral-500 font-medium">{item.label}</span>
          )}
        </li>
      ))}
    </ol>
  </div>
</nav>

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
