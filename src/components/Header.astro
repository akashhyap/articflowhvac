---
import { business, navLinks } from '../data/site';
---

<!-- Top Bar â€” phone only on mobile, full on desktop -->
<div class="bg-primary text-white text-[0.8125rem] sm:text-[0.875rem]">
  <div class="container-wide flex justify-between items-center py-2 px-4 sm:px-6 lg:px-8">
    <a href={`mailto:${business.email}`} class="hidden sm:flex items-center gap-2 text-white/80 hover:text-accent transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/></svg>
      {business.email}
    </a>
    <div class="flex items-center gap-3 mx-auto sm:mx-0">
      <a href={`tel:${business.phoneRaw}`} class="flex items-center gap-1.5 text-white font-semibold hover:text-accent transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"/></svg>
        {business.phone}
      </a>
      <span class="hidden sm:inline text-white/30">|</span>
      <span class="text-accent font-semibold text-[0.75rem] sm:text-[0.875rem]">24/7 Emergency</span>
    </div>
  </div>
</div>

<!-- Main Nav -->
<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container-wide flex items-center justify-between py-3 px-4 sm:px-6 lg:px-8 lg:py-4">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2.5 sm:gap-3 flex-shrink-0">
      <div class="w-9 h-9 sm:w-10 sm:h-10 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
        <svg viewBox="0 0 24 24" fill="none" class="w-5 h-5 sm:w-6 sm:h-6" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2v20M12 2l-3 3M12 2l3 3M12 22l-3-3M12 22l3-3" stroke="#F0A500" stroke-width="2" stroke-linecap="round"/>
          <path d="M2 12h20M2 12l3-3M2 12l3 3M22 12l-3-3M22 12l3 3" stroke="#F0A500" stroke-width="2" stroke-linecap="round"/>
          <path d="M4.93 4.93l14.14 14.14M4.93 4.93l1.41 3.54M4.93 4.93l3.54 1.41" stroke="#F0A500" stroke-width="1.5" stroke-linecap="round" opacity="0.6"/>
          <path d="M19.07 4.93L4.93 19.07M19.07 4.93l-1.41 3.54M19.07 4.93l-3.54 1.41" stroke="#F0A500" stroke-width="1.5" stroke-linecap="round" opacity="0.6"/>
          <circle cx="12" cy="12" r="2.5" fill="#F0A500"/>
        </svg>
      </div>
      <div class="leading-none">
        <span class="text-[1.15rem] sm:text-[1.4rem] font-heading font-extrabold tracking-tight text-primary block">ARCTICFLOW</span>
        <span class="text-[0.6rem] sm:text-[0.7rem] font-heading font-bold tracking-[0.25em] uppercase text-neutral-400 block">HVAC Las Vegas</span>
      </div>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden lg:flex items-center gap-1" aria-label="Main navigation">
      {navLinks.map((link) => (
        <div class="relative group">
          <a
            href={link.href}
            class="px-3.5 py-2.5 text-nav text-neutral-700 hover:text-primary rounded-md transition-colors inline-flex items-center gap-1"
          >
            {link.label}
            {link.children && (
              <svg class="w-4 h-4 text-neutral-400 group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            )}
          </a>
          {link.children && (
            <div class="absolute top-full left-0 pt-1 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="bg-white shadow-xl rounded-lg border border-neutral-100 py-2 min-w-[240px]">
                {link.children.map((child) => (
                  <a
                    href={child.href}
                    class="block px-5 py-2.5 text-nav text-neutral-700 hover:text-primary hover:bg-primary-50 transition-colors"
                  >
                    {child.label}
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>
      ))}
    </nav>

    <!-- CTA Button -->
    <div class="hidden lg:block">
      <a href="/contact/" class="btn-primary">Free Quote</a>
    </div>

    <!-- Mobile Toggle -->
    <button
      id="mobile-menu-btn"
      class="lg:hidden p-2 text-primary rounded-md"
      aria-label="Open menu"
      aria-expanded="false"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="lg:hidden hidden bg-white border-t border-neutral-100">
    <nav class="py-3 px-4 flex flex-col gap-0.5" aria-label="Mobile navigation">
      {navLinks.map((link) => (
        <>
          <a href={link.href} class="px-4 py-3 text-[1rem] font-medium text-neutral-700 hover:text-primary hover:bg-primary-50 rounded-lg transition-colors">
            {link.label}
          </a>
          {link.children && link.children.map((child) => (
            <a href={child.href} class="pl-9 pr-4 py-2.5 text-[0.9375rem] text-neutral-500 hover:text-primary hover:bg-primary-50 rounded-lg transition-colors">
              {child.label}
            </a>
          ))}
        </>
      ))}
      <div class="pt-2 pb-1 px-4">
        <a href="/contact/" class="btn-primary w-full text-center block">Get a Free Quote</a>
      </div>
      <div class="px-4 pb-2">
        <a href={`tel:${business.phoneRaw}`} class="btn-secondary w-full text-center block">Call: {business.phone}</a>
      </div>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    const isOpen = !menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden');
    btn?.setAttribute('aria-expanded', String(!isOpen));
  });
</script>
