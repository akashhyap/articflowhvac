---
import { business } from '../data/site';

export interface Props {
  heading?: string;
  subheading?: string;
  variant?: 'default' | 'dark' | 'accent';
}

const {
  heading = 'Ready to Get Started?',
  subheading = 'Contact ArcticFlow HVAC today for fast, professional heating and cooling services in Las Vegas.',
  variant = 'default'
} = Astro.props;

const bgClass = {
  default: 'bg-gradient-to-br from-secondary to-primary',
  dark: 'bg-primary-900',
  accent: 'bg-accent',
}[variant];

const textClass = variant === 'accent' ? 'text-primary-900' : 'text-white';
const subClass = variant === 'accent' ? 'text-primary-700' : 'text-white/85';
---

<section class={`${bgClass} section-padding relative overflow-hidden`}>
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 right-0 w-[400px] h-[400px] bg-white rounded-full blur-[100px] translate-x-1/3 -translate-y-1/3"></div>
  </div>
  <div class="container-wide relative z-10 text-center max-w-3xl mx-auto">
    <h2 class={`text-h2 ${textClass} mb-4`}>{heading}</h2>
    <p class={`${subClass} text-body-lg mb-8`}>{subheading}</p>
    <div class="flex flex-wrap justify-center gap-4">
      <a href="/contact/" class={variant === 'accent' ? 'btn-secondary' : 'btn-primary'}>
        Schedule Service
      </a>
      <a href={`tel:${business.phoneRaw}`} class={variant === 'accent' ? 'inline-flex items-center justify-center px-7 py-3.5 bg-primary text-white font-heading font-bold text-[1.0625rem] rounded-lg hover:bg-primary-600 transition-all duration-200' : 'btn-outline-white'}>
        Call: {business.phone}
      </a>
    </div>
  </div>
</section>
