---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ContactForm from '../components/ContactForm.astro';
import { business } from '../data/site';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  name: 'Contact ArcticFlow HVAC Las Vegas',
  url: `${business.domain}/contact/`,
  mainEntity: {
    '@type': 'LocalBusiness',
    name: business.name,
    telephone: business.phone,
    email: business.email,
    address: {
      '@type': 'PostalAddress',
      streetAddress: business.address.street,
      addressLocality: business.address.city,
      addressRegion: business.address.state,
      postalCode: business.address.zip,
    },
  },
};
---

<BaseLayout
  title="Contact ArcticFlow HVAC Las Vegas | Free Estimates"
  description="Contact ArcticFlow HVAC for heating and cooling services in Las Vegas. Free estimates, 24/7 emergency service. Call (725) 349-4849 or use our online form."
  schema={schema}
>
  <Hero heading="Contact ArcticFlow HVAC Las Vegas" subheading="Get in touch for a free estimate or to schedule HVAC service" />
  <Breadcrumbs items={[{ label: 'Home', href: '/' }, { label: 'Contact' }]} />

  <section class="section-padding bg-white">
    <div class="container-wide">
      <div class="grid lg:grid-cols-2 gap-10 max-w-6xl mx-auto">
        <!-- Contact Form -->
        <ContactForm />

        <!-- Contact Info -->
        <div>
          <h2 class="text-h2 text-primary mb-6">Contact Information</h2>
          <div class="space-y-6">
            <div class="flex items-start gap-4 bg-primary-50 rounded-xl p-5 border border-primary-100">
              <div class="w-10 h-10 rounded-lg bg-primary flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-accent"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/></svg>
              </div>
              <div>
                <h3 class="text-h4 text-primary mb-1">Address</h3>
                <p class="text-neutral-700 text-body">{business.address.full}</p>
              </div>
            </div>
            <div class="flex items-start gap-4 bg-primary-50 rounded-xl p-5 border border-primary-100">
              <div class="w-10 h-10 rounded-lg bg-primary flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-accent"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"/></svg>
              </div>
              <div>
                <h3 class="text-h4 text-primary mb-1">Phone</h3>
                <a href={`tel:${business.phoneRaw}`} class="text-secondary text-body font-semibold hover:text-accent transition-colors">{business.phone}</a>
              </div>
            </div>
            <div class="flex items-start gap-4 bg-primary-50 rounded-xl p-5 border border-primary-100">
              <div class="w-10 h-10 rounded-lg bg-primary flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-accent"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/></svg>
              </div>
              <div>
                <h3 class="text-h4 text-primary mb-1">Email</h3>
                <a href={`mailto:${business.email}`} class="text-secondary text-body hover:text-accent transition-colors">{business.email}</a>
              </div>
            </div>
            <div class="flex items-start gap-4 bg-primary-50 rounded-xl p-5 border border-primary-100">
              <div class="w-10 h-10 rounded-lg bg-primary flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-accent"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
              </div>
              <div>
                <h3 class="text-h4 text-primary mb-1">Hours</h3>
                <p class="text-neutral-700 text-body">{business.hours}</p>
              </div>
            </div>
          </div>

          <!-- Google Maps Embed -->
          <div class="mt-8 rounded-xl overflow-hidden border border-neutral-200 shadow-sm">
            <iframe
              src={`https://www.google.com/maps?q=${encodeURIComponent(business.address.full)}&output=embed`}
              width="100%"
              height="280"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title={`Map showing ${business.name} location at ${business.address.full}`}
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
